FROM python:3.11-slim

WORKDIR /app

# Install OpenVPN and system dependencies
RUN apt-get update && apt-get install -y \
    openvpn iputils-ping\
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy the application code and VPN config
COPY detector.py .

# Create an entrypoint script to start OpenVPN and the application
COPY vpn-entrypoint.sh /vpn-entrypoint.sh
RUN chmod +x /vpn-entrypoint.sh

# Use the entrypoint script
ENTRYPOINT ["/vpn-entrypoint.sh"]